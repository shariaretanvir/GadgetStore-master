@{
    Layout = null;
}

<!doctype html>

<html ng-app="myapp">
<head>
    <base href="/"/>
    <meta name="viewport" content="width=device-width"/>
    <title>Index</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet"/>
        <link href="//netdna.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body ng-controller="mainCtrl">
<div class="container">
    <div class="container well">
        <div class="col-xs-12">
            <div class=" h1 col-xs-3"> Gadget Store</div>
            <div class="form-group col-xs-3">
                <input class="form-control" style="margin-top: 8%" type="search" ng-model="searchText" id="searchTextBox" placeholder="Filter Gadgets"/>
            </div>
            <cart-details></cart-details>
        </div>
    </div>
    <div ng-show="data.error" class="alert alert-danger" ng-cloak>
        Error : {{}}. Gadgets Warenot Loaded.
        <a href="#" class="alert-link">Please Try Again.</a>
    </div>
    <ng-view></ng-view>
</div>
<script src="~/Scripts/jquery-1.9.1.js"></script>
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/angular-route.js"></script>
<script src="~/app/mainapp.js"></script>
<script src="~/app/controllers/mainController.js"></script>
<script src="~/app/controllers/gadgetctrl.js"></script>
<script src="~/app/aa.js"></script>
<script src="~/app/component/cartapp.js"></script>
<script src="~/app/controllers/checkoutCtrl.js"></script>
<script src="~/app/service/mainservice.js"></script>
<script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-2.1.3.js"></script>
</body>
</html>
